/* 知识图谱页样式 */
.graph-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #FEF2F2 0%, #F8F9FA 100%);
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 16rpx;
  z-index: 100;
  background: linear-gradient(to bottom, rgba(183, 28, 28, 0.9) 0%, rgba(183, 28, 28, 0.7) 100%);
  backdrop-filter: blur(20rpx);
}

.nav-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: none;
  padding: 0;
}

.nav-button-hover {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.nav-placeholder {
  width: 80rpx;
}

/* ========== 滚动内容区域 ========== */
.content-scroll {
  flex: 1;
  padding-top: 120rpx;
  padding-bottom: 48rpx;
}

/* ========== 中心建筑节点 ========== */
.center-node {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
  position: relative;
  z-index: 10;
}

.node-card {
  position: relative;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #D41111 0%, #B71C1C 100%);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(183, 28, 28, 0.3);
  min-width: 480rpx;
}

.node-icon {
  font-size: 64rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.node-info {
  flex: 1;
}

.node-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.node-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.node-badge {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  padding: 8rpx 20rpx;
  background-color: #FFFFFF;
  color: #D41111;
  font-size: 20rpx;
  font-weight: 700;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* ========== 关系网络图 ========== */
.relation-graph {
  margin: 32rpx 40rpx 64rpx;
  padding: 48rpx 32rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FEF2F2 100%);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(183, 28, 28, 0.1);
}

.graph-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #D41111;
  margin-bottom: 48rpx;
}

/* 关系图画布 */
.graph-canvas {
  position: relative;
  min-height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 中心节点 */
.graph-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.center-dot {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #D41111 0%, #B71C1C 100%);
  box-shadow: 0 8rpx 24rpx rgba(183, 28, 28, 0.4), 0 0 0 8rpx rgba(183, 28, 28, 0.1);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.center-label {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #D41111;
  text-align: center;
  max-width: 200rpx;
}

/* 节点组 */
.graph-nodes {
  position: absolute;
  display: flex;
  gap: 80rpx;
}

/* 人物节点组（左上） */
.people-nodes {
  top: 20rpx;
  left: 20rpx;
  flex-direction: column;
  gap: 60rpx;
}

/* 事件节点组（右上） */
.event-nodes {
  top: 40rpx;
  right: 20rpx;
  flex-direction: column;
  gap: 80rpx;
}

/* 关联建筑节点组（底部） */
.building-nodes {
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  flex-direction: row;
  gap: 100rpx;
}

/* 单个节点 */
.graph-node {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

/* 连接线 */
.node-line {
  position: absolute;
  background: rgba(183, 28, 28, 0.3);
  z-index: 1;
}

/* 人物节点连接线 */
.node-line-people {
  width: 200rpx;
  height: 2rpx;
  top: 36rpx;
  left: 36rpx;
  transform-origin: left center;
  transform: rotate(25deg);
}

/* 事件节点连接线 */
.node-line-event {
  width: 180rpx;
  height: 2rpx;
  top: 36rpx;
  right: 36rpx;
  transform-origin: right center;
  transform: rotate(-20deg);
}

/* 关联建筑节点连接线 */
.node-line-building {
  width: 2rpx;
  height: 150rpx;
  bottom: 72rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* 节点圆点 */
.node-dot {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 5;
  position: relative;
}

.node-dot-people {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
}

.node-dot-event {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

.node-dot-building {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
}

.node-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* 节点标签 */
.node-label {
  font-size: 20rpx;
  color: #4B5563;
  text-align: center;
  max-width: 120rpx;
  line-height: 28rpx;
  font-weight: 500;
}

/* ========== 通用区块样式 ========== */
.section {
  margin: 32rpx 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  flex: 1;
}

.section-count {
  padding: 4rpx 16rpx;
  background-color: #FEF2F2;
  color: #D41111;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* ========== 人物卡片 ========== */
.person-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.person-card {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.person-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FEF2F2 0%, #FEE2E2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  flex-shrink: 0;
}

.person-info {
  flex: 1;
  min-width: 0;
}

.person-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 8rpx;
}

.person-role {
  font-size: 24rpx;
  color: #D41111;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.person-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 40rpx;
}

/* ========== 事件卡片 ========== */
.event-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.event-card {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.event-date {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #D41111 0%, #B71C1C 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 16rpx;
  height: fit-content;
  white-space: nowrap;
  flex-shrink: 0;
}

.event-content {
  flex: 1;
  min-width: 0;
}

.event-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 12rpx;
}

.event-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 40rpx;
}

/* ========== 关联建筑卡片 ========== */
.building-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.building-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  align-items: center;
  transition: all 0.2s ease;
}

.building-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.building-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background-color: #F3F4F6;
  flex-shrink: 0;
}

.building-info {
  flex: 1;
  min-width: 0;
}

.building-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.building-relation {
  font-size: 24rpx;
  color: #9CA3AF;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

/* ========== 时间线 ========== */
.timeline {
  position: relative;
  padding-left: 80rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 48rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -80rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background-color: #D41111;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 0 0 4rpx #FEF2F2;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: -68rpx;
  top: 32rpx;
  width: 2rpx;
  height: calc(100% + 16rpx);
  background-color: #FCA5A5;
  z-index: 1;
}

.timeline-content {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.timeline-year {
  font-size: 28rpx;
  font-weight: 600;
  color: #D41111;
  margin-bottom: 8rpx;
}

.timeline-event {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 40rpx;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 48rpx;
}
