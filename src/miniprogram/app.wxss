/**
 * 全局样式 - 福建红色图谱
 * 主色调：革命深红色 #B71C1C
 * 背景色：米白色 #F8F9FA
 */

/* 全局重置 */
page {
  height: 100%;
  background-color: #F8F9FA;
  color: #111827;
  font-family: -apple-system-font, BlinkMacSystemFont, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei UI", "Microsoft YaHei", Arial, sans-serif;
  font-size: 16px;
  line-height: 1.6;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  background: transparent;
}

/* 全局容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 主色调 */
.color-primary {
  color: #B71C1C;
}

.bg-primary {
  background-color: #B71C1C;
}

.border-primary {
  border-color: #B71C1C;
}

/* 文字颜色 */
.text-white {
  color: #FFFFFF;
}

.text-gray-900 {
  color: #111827;
}

.text-gray-600 {
  color: #4B5563;
}

.text-gray-500 {
  color: #6B7280;
}

.text-gray-400 {
  color: #9CA3AF;
}

/* 背景颜色 */
.bg-white {
  background-color: #FFFFFF;
}

.bg-gray-50 {
  background-color: #F9FAFB;
}

.bg-gray-100 {
  background-color: #F3F4F6;
}

.bg-red-50 {
  background-color: #FEF2F2;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.flex-1 {
  flex: 1;
}

.items-center {
  align-items: center;
}

.items-start {
  align-items: flex-start;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

/* 间距 */
.gap-1 { gap: 4rpx; }
.gap-2 { gap: 8rpx; }
.gap-3 { gap: 12rpx; }
.gap-4 { gap: 16rpx; }

.p-2 { padding: 8rpx; }
.p-3 { padding: 12rpx; }
.p-4 { padding: 16rpx; }
.p-5 { padding: 20rpx; }

.px-2 { padding-left: 8rpx; padding-right: 8rpx; }
.px-3 { padding-left: 12rpx; padding-right: 12rpx; }
.px-4 { padding-left: 16rpx; padding-right: 16rpx; }
.px-5 { padding-left: 20rpx; padding-right: 20rpx; }

.py-2 { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-3 { padding-top: 12rpx; padding-bottom: 12rpx; }
.py-4 { padding-top: 16rpx; padding-bottom: 16rpx; }

.m-2 { margin: 8rpx; }
.m-3 { margin: 12rpx; }
.m-4 { margin: 16rpx; }

.mb-1 { margin-bottom: 4rpx; }
.mb-2 { margin-bottom: 8rpx; }
.mb-3 { margin-bottom: 12rpx; }
.mb-4 { margin-bottom: 16rpx; }
.mb-6 { margin-bottom: 24rpx; }
.mb-8 { margin-bottom: 32rpx; }

.mt-2 { margin-top: 8rpx; }
.mt-3 { margin-top: 12rpx; }
.mt-4 { margin-top: 16rpx; }

/* 圆角 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-2xl { border-radius: 32rpx; }
.rounded-full { border-radius: 9999rpx; }

/* 阴影 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 32rpx rgba(183, 28, 28, 0.2);
}

/* 边框 */
.border {
  border: 1rpx solid #E5E7EB;
}

.border-gray-100 {
  border-color: #F3F4F6;
}

/* 文字样式 */
.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

.text-2xl {
  font-size: 48rpx;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.font-bold {
  font-weight: 700;
}

/* 文字对齐 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 溢出处理 */
.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 定位 */
.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.fixed {
  position: fixed;
}

/* 宽度高度 */
.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

/* 点击态 */
.active-scale {
  transition: transform 0.1s ease;
}

.active-scale:active {
  transform: scale(0.98);
}

/* 通用按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #B71C1C;
  color: #FFFFFF;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 输入框样式 */
.input {
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 1rpx solid #E5E7EB;
}

.input:focus {
  border-color: #B71C1C;
  background-color: #FFFFFF;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 400;
  white-space: nowrap;
}

.tag-red {
  background-color: #FEF2F2;
  color: #991B1B;
  border: 1rpx solid #FCA5A5;
}

.tag-gray {
  background-color: #F9FAFB;
  color: #4B5563;
  border: 1rpx solid #E5E7EB;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #E5E7EB;
  margin: 24rpx 0;
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 禁用按钮默认样式 */
button::after {
  border: none;
}

button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  outline: none;
}

/* 图片样式 */
image {
  display: block;
}

/* 隐藏元素 */
.hidden {
  display: none;
}

/* 显示元素 */
.block {
  display: block;
}

/* z-index */
.z-10 { z-index: 10; }
.z-20 { z-index: 20; }
.z-30 { z-index: 30; }
.z-40 { z-index: 40; }
.z-50 { z-index: 50; }

/* 收缩 */
.shrink-0 {
  flex-shrink: 0;
}

/* 最小宽度 */
.min-w-0 {
  min-width: 0;
}
