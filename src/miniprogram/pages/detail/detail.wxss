/* 详情页样式 */
.page-container {
  width: 100%;
  height: 100%;
  background-color: #F8F9FA;
  display: flex;
  flex-direction: column;
}

/* ========== 顶部大图区域 ========== */
.header-image {
  position: relative;
  width: 100%;
  height: 680rpx;
  flex-shrink: 0;
  background-size: cover;
  background-position: center;
}

.image-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, transparent 40%, rgba(0,0,0,0.7) 100%);
}

/* ========== 顶部导航按钮 ========== */
.nav-button {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  z-index: 20;
}

.nav-button-left {
  left: -3cm;
}

.nav-button-right {
  right: 16rpx;
}

.nav-button-hover {
  opacity: 0.7;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* ========== 底部标题信息 ========== */
.header-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0 40rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  z-index: 10;
}

.badge-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.badge-red {
  background-color: #D41111;
  color: #FFFFFF;
  border: 1rpx solid rgba(139, 0, 0, 0.3);
}

.badge-dark {
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  color: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  font-weight: 500;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.view-count {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.eye-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* ========== 主内容区域 ========== */
.content-wrapper {
  flex: 1;
  margin-top: -48rpx;
  background-color: #F8F9FA;
  border-radius: 48rpx 48rpx 0 0;
  position: relative;
  z-index: 10;
  overflow-y: auto;
  padding-bottom: 192rpx;
}

.content-inner {
  padding: 48rpx 40rpx;
}

/* ========== 地址信息卡片 ========== */
.info-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx -4rpx rgba(0, 0, 0, 0.05), 0 2rpx 8rpx -2rpx rgba(0, 0, 0, 0.02);
  margin-bottom: 48rpx;
  border: 1rpx solid #F3F4F6;
}

.info-row {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
}

.icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-red {
  background-color: #FEF2F2;
  color: #D41111;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
}

.building-icon {
  font-size: 32rpx;
}

.info-content {
  flex: 1;
  min-width: 0;
  padding-top: 4rpx;
}

.info-label {
  display: block;
  color: #999999;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.info-value {
  display: block;
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  color: #D41111;
  padding: 8rpx;
}

.divider {
  height: 1rpx;
  width: 100%;
  background-color: #F3F4F6;
  margin: 32rpx 0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.info-col {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
}

.info-content-small {
  padding-top: 4rpx;
}

/* ========== 简介部分 ========== */
.section {
  margin-bottom: 64rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.dot {
  width: 8rpx;
  height: 32rpx;
  background-color: #D41111;
  border-radius: 9999rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F1F1F;
}

.description-box {
  position: relative;
}

.description {
  color: #666666;
  font-size: 28rpx;
  line-height: 48rpx;
  text-align: justify;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.description.collapsed {
  max-height: 144rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.description.expanded {
  max-height: none;
}

.expand-button {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: none;
  border: none;
  padding: 0;
}

.expand-text {
  color: #D41111;
  font-size: 24rpx;
  font-weight: 600;
}

.expand-arrow {
  color: #D41111;
  font-size: 28rpx;
  transition: transform 0.3s ease;
}

.expand-arrow.rotate {
  transform: rotate(180deg);
}

/* ========== 功能服务 ========== */
.service-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.service-card {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #F3F4F6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.service-card-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.service-arrow {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  color: #D1D5DB;
  font-size: 32rpx;
  font-weight: 300;
  transition: color 0.2s ease;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.service-icon-blue {
  background-color: #EFF6FF;
  color: #2563EB;
}

.service-icon-purple {
  background-color: #F5F3FF;
  color: #7C3AED;
}

.service-icon-green {
  background-color: #F0FDF4;
  color: #16A34A;
}

.service-icon-orange {
  background-color: #FFF7ED;
  color: #EA580C;
}

.service-emoji {
  font-size: 44rpx;
}

.service-text {
  text-align: left;
}

.service-name {
  display: block;
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.service-desc {
  display: block;
  color: #999999;
  font-size: 24rpx;
}

/* ========== 开放时间和门票信息 ========== */
.time-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid #F3F4F6;
}

.time-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.time-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.time-emoji {
  font-size: 40rpx;
}

.time-label {
  color: #666666;
  font-size: 28rpx;
}

.time-value {
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 500;
}

.time-value-free {
  color: #16A34A;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 48rpx;
}
