/* 详情页样式 */
.page-container {
  width: 100%;
  min-height: 100%;
  background-color: #F8F9FA;
}

/* ========== 顶部大图区域 ========== */
.header-image {
  position: relative;
  width: 100%;
  height: 680rpx;
  background-size: cover;
  background-position: center;
}

.image-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, transparent 40%, rgba(0,0,0,0.7) 100%);
}

/* ========== 顶部导航按钮 ========== */
.nav-button {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  z-index: 20;
}

.nav-button-left {
  left: -1.5cm;
}

.nav-button-hover {
  opacity: 0.7;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* ========== 底部标题信息 ========== */
.header-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0 40rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  z-index: 10;
}

.badge-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.badge-red {
  background-color: #D41111;
  color: #FFFFFF;
  border: 1rpx solid rgba(139, 0, 0, 0.3);
}

.badge-dark {
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  color: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  font-weight: 500;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.view-count {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.eye-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* ========== 主内容区域 ========== */
.content-wrapper {
  margin-top: -48rpx;
  background-color: #F8F9FA;
  border-radius: 48rpx 48rpx 0 0;
  position: relative;
  z-index: 10;
  padding-bottom: 192rpx;
}

.content-inner {
  padding: 48rpx 40rpx;
}

/* ========== 地址信息卡片 ========== */
.info-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx -4rpx rgba(0, 0, 0, 0.05), 0 2rpx 8rpx -2rpx rgba(0, 0, 0, 0.02);
  margin-bottom: 48rpx;
  border: 1rpx solid #F3F4F6;
}

.info-row {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
}

.icon-box {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-red {
  background: linear-gradient(135deg, #FEF2F2 0%, #FEE2E2 100%);
  color: #D41111;
  box-shadow: 0 4rpx 12rpx rgba(212, 17, 17, 0.08);
  border: 1rpx solid rgba(212, 17, 17, 0.06);
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
}

.building-icon {
  font-size: 32rpx;
}

.info-content {
  flex: 1;
  min-width: 0;
  padding-top: 4rpx;
}

.info-label {
  display: block;
  color: #999999;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.info-value {
  display: block;
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  color: #D41111;
  padding: 8rpx;
}

.divider {
  height: 1rpx;
  width: 100%;
  background-color: #F3F4F6;
  margin: 32rpx 0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.info-col {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
}

.info-content-small {
  padding-top: 4rpx;
}

/* ========== 简介部分 ========== */
.section {
  margin-bottom: 64rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.dot {
  width: 8rpx;
  height: 32rpx;
  background-color: #D41111;
  border-radius: 9999rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F1F1F;
}

.description-box {
  position: relative;
}

.description {
  color: #666666;
  font-size: 28rpx;
  line-height: 48rpx;
  text-align: justify;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.description.collapsed {
  max-height: 144rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.description.expanded {
  max-height: none;
}

.expand-button {
  margin-top: 16rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: none;
  border: none;
  padding: 0;
}

.expand-text {
  color: #D41111;
  font-size: 24rpx;
  font-weight: 600;
}

.expand-arrow {
  color: #D41111;
  font-size: 28rpx;
  transition: transform 0.3s ease;
}

.expand-arrow.rotate {
  transform: rotate(180deg);
}

/* ========== 功能服务 ========== */
.service-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.service-card {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 36rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 28rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 8rpx 24rpx -6rpx rgba(0, 0, 0, 0.08),
              0 4rpx 12rpx -3rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.service-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, rgba(212, 17, 17, 0.3), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.service-card-hover {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 0 12rpx 32rpx -8rpx rgba(0, 0, 0, 0.12),
              0 6rpx 16rpx -4rpx rgba(0, 0, 0, 0.08);
}

.service-card-hover::before {
  opacity: 1;
}

.service-arrow {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  color: #D1D5DB;
  font-size: 36rpx;
  font-weight: 300;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0.6;
}

.service-card-hover .service-arrow {
  color: #B71C1C;
  opacity: 1;
  transform: translateX(6rpx);
}

.service-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
  position: relative;
  box-shadow: 0 6rpx 18rpx -4rpx rgba(0, 0, 0, 0.12);
}

.service-icon::after {
  content: '';
  position: absolute;
  inset: -2rpx;
  border-radius: 50%;
  padding: 2rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.2));
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  pointer-events: none;
}

.service-icon-blue {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
  color: #1E40AF;
}

.service-icon-purple {
  background: linear-gradient(135deg, #EDE9FE 0%, #DDD6FE 100%);
  color: #6D28D9;
}

.service-icon-green {
  background: linear-gradient(135deg, #DCFCE7 0%, #BBF7D0 100%);
  color: #15803D;
}

.service-icon-orange {
  background: linear-gradient(135deg, #FFEDD5 0%, #FED7AA 100%);
  color: #C2410C;
}

.service-icon-img {
  width: 56rpx;
  height: 56rpx;
}

.service-text {
  text-align: left;
}

.service-name {
  display: block;
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.service-desc {
  display: block;
  color: #999999;
  font-size: 24rpx;
}

/* ========== 开放时间和门票信息 ========== */
.time-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid #F3F4F6;
}

.time-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.time-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.time-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  color: #B71C1C;
}

.time-label {
  color: #666666;
  font-size: 28rpx;
}

.time-value {
  color: #1F1F1F;
  font-size: 28rpx;
  font-weight: 500;
}

.time-value-free {
  color: #16A34A;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 48rpx;
}
