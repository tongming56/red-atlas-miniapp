/* 搜索页样式 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
}

/* 搜索栏 */
.search-bar {
  background-color: #FFFFFF;
  padding-bottom: 20rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.search-input-wrapper {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background-color: #F9FAFB;
  border-radius: 36rpx;
  border: 2rpx solid #E5E7EB;
}

.search-input-wrapper:focus-within {
  border-color: #B71C1C;
  background-color: #FFFFFF;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #111827;
}

.clear-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
}

.cancel-button {
  color: #B71C1C;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 8rpx;
}

/* 主内容区 */
.main-content {
  flex: 1;
  padding: 32rpx;
}

/* 热门搜索 */
.hot-search {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.header-dot {
  width: 8rpx;
  height: 32rpx;
  border-radius: 999rpx;
  background-color: #B71C1C;
}

.header-title {
  color: #111827;
  font-size: 36rpx;
  font-weight: 600;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  padding: 16rpx 32rpx;
  background-color: #FFFFFF;
  border-radius: 999rpx;
  color: #4B5563;
  font-size: 28rpx;
  border: 1rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.hot-tag:active {
  background-color: #FEF2F2;
  color: #B71C1C;
  border-color: #B71C1C;
  transform: scale(0.95);
}

/* 搜索结果 */
.search-results {
  display: flex;
  flex-direction: column;
}

.results-header {
  margin-bottom: 24rpx;
}

.results-count {
  color: #6B7280;
  font-size: 28rpx;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border: 1rpx solid #F3F4F6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s ease;
}

.result-item:active {
  transform: scale(0.98);
}

.item-image-wrapper {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F3F4F6;
}

.item-image {
  width: 100%;
  height: 100%;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.item-name {
  color: #111827;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
}

.location-text {
  color: #6B7280;
  font-size: 24rpx;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 32rpx;
}

.empty-text {
  color: #111827;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  color: #9CA3AF;
  font-size: 28rpx;
}
