/* 地图导航页样式 */
.map-container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* ========== 地图组件 ========== */
.map {
  width: 100%;
  height: 100%;
}

/* ========== 地图控制按钮 ========== */
.map-control {
  position: absolute;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 定位按钮 */
.location-control {
  right: 32rpx;
  bottom: 320rpx;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 缩放控制按钮 */
.zoom-controls {
  right: 32rpx;
  bottom: 200rpx;
  width: 88rpx;
  display: flex;
  flex-direction: column;
}

.zoom-button {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
}

.zoom-text {
  font-size: 48rpx;
  color: #1F1F1F;
  font-weight: 300;
  line-height: 48rpx;
}

.zoom-divider {
  width: 100%;
  height: 1rpx;
  background-color: #E5E7EB;
}

/* ========== 顶部导航栏 ========== */
.nav-bar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 16rpx;
  z-index: 10;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, transparent 100%);
}

.nav-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20rpx);
  border: none;
  padding: 0;
}

.nav-button-hover {
  background-color: rgba(0, 0, 0, 0.4);
  transform: scale(0.95);
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.nav-placeholder {
  width: 80rpx;
}

/* ========== 底部信息卡片 ========== */
.info-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx 40rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.building-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

/* 建筑图片 */
.building-image-container {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F3F4F6;
}

.building-image {
  width: 100%;
  height: 100%;
}

/* 建筑信息 */
.building-details {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.building-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F1F1F;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.building-address {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.address-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.address-text {
  flex: 1;
  font-size: 24rpx;
  color: #6B7280;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.distance-info {
  display: flex;
  align-items: center;
}

.distance-label {
  font-size: 24rpx;
  color: #9CA3AF;
}

.distance-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #D41111;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  padding: 0;
  transition: all 0.2s ease;
}

.action-button-primary {
  background-color: #D41111;
  color: #FFFFFF;
}

.action-button-primary:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.action-button-secondary {
  background-color: #F3F4F6;
  color: #1F1F1F;
  border: 1rpx solid #E5E7EB;
}

.action-button-secondary:active {
  background-color: #E5E7EB;
  transform: scale(0.98);
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}
