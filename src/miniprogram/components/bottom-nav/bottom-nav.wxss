/* 底部导航栏样式 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F3F4F6;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.nav-container {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 120rpx;
  padding: 0 48rpx;
  position: relative;
}

/* 导航项 */
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  gap: 8rpx;
  position: relative;
  padding-bottom: 12rpx;
}

/* 图标容器 */
.nav-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

/* 图标 */
.nav-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.2s ease;
}

.nav-item:active .nav-icon {
  transform: scale(0.9);
}

/* 文字 */
.nav-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #9CA3AF;
  transition: color 0.3s ease;
}

.nav-text.active {
  color: #B71C1C;
  font-weight: 600;
}

/* 中央扫码按钮 */
.nav-item-center {
  position: absolute;
  top: -28rpx;
  left: 50%;
  transform: translateX(-50%);
  flex: none;
  width: auto;
}

.scan-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #D32F2F 0%, #B71C1C 100%);
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(183, 28, 28, 0.45), 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  border: 8rpx solid #FFFFFF;
  transition: transform 0.2s ease;
}

.scan-button:active {
  transform: scale(0.93);
}

.scan-text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 适配安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
