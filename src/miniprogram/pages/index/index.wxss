/* 首页样式 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
}

/* 顶部标题栏 */
.header {
  background-color: #B71C1C;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 32rpx;
  position: sticky;
  top: 0;
  z-index: 50;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.title-wrapper {
  display: flex;
  flex-direction: column;
}

.title {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  font-family: 'Noto Sans SC', sans-serif;
}

.subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
  text-transform: uppercase;
  margin-top: 4rpx;
}

.placeholder {
  width: 64rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 24rpx;
  height: 88rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 16rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: #9CA3AF;
  font-size: 28rpx;
  font-weight: 500;
}

.map-button {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.map-button:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.map-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 地区筛选栏 */
.region-filter {
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid #F3F4F6;
  padding: 24rpx 0;
  position: sticky;
  top: 264rpx;
  z-index: 40;
}

.region-scroll {
  width: 100%;
  white-space: nowrap;
}

.region-list {
  display: inline-flex;
  padding: 0 32rpx;
  gap: 24rpx;
}

.region-item {
  flex-shrink: 0;
  padding: 12rpx 40rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  background-color: #F9FAFB;
  color: #4B5563;
  border: 1rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.region-item.active {
  background-color: #B71C1C;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(183, 28, 28, 0.2);
  border-color: #B71C1C;
  font-weight: 700;
}

.region-item:active {
  transform: scale(0.95);
}

/* 主内容区 */
.main-content {
  flex: 1;
  padding: 32rpx;
}

.building-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 建筑卡片 */
.building-card {
  display: flex;
  gap: 32rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  border: 1rpx solid #F3F4F6;
  box-shadow: 0 8rpx 40rpx -4rpx rgba(0, 0, 0, 0.05), 0 4rpx 16rpx -4rpx rgba(0, 0, 0, 0.02);
  transition: transform 0.2s ease;
}

.building-card:active {
  transform: scale(0.99);
}

/* 图片区域 */
.card-image-wrapper {
  width: 224rpx;
  height: 224rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F3F4F6;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-image {
  width: 100%;
  height: 100%;
  transition: transform 0.7s ease;
}

.building-card:active .card-image {
  transform: scale(1.1);
}

.card-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.badge-text {
  color: #B71C1C;
  font-size: 20rpx;
  font-weight: 700;
  font-family: 'Noto Sans SC', sans-serif;
}

/* 内容区域 */
.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.card-title-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.title-dot {
  width: 8rpx;
  height: 32rpx;
  border-radius: 999rpx;
  background-color: #B71C1C;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.card-title {
  color: #111827;
  font-size: 34rpx;
  font-weight: 700;
  line-height: 1.3;
  letter-spacing: -0.5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-location {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
}

.location-text {
  color: #4B5563;
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签区域 */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}
