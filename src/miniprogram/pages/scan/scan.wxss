/* 扫码页样式 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F7F7F7;
}

/* 顶部导航栏 */
.nav-bar {
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 50;
  border-bottom: 1rpx solid #F3F4F6;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  height: 88rpx;
}

.nav-back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  margin-left: -16rpx;
}

.back-icon {
  width: 44rpx;
  height: 44rpx;
}

.nav-title {
  color: #111827;
  font-size: 34rpx;
  font-weight: 600;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.nav-placeholder {
  width: 64rpx;
}

/* 主内容区 */
.main-content {
  flex: 1;
  padding: 0;
}

/* 扫码提示区域 */
.scan-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx 64rpx;
  background-color: #FFFFFF;
  margin-bottom: 24rpx;
}

.scan-icon-wrapper {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.scan-icon {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.3;
}

/* 扫描线动画 */
.scan-line {
  position: absolute;
  width: 200rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #B71C1C, transparent);
  animation: scan 2s ease-in-out infinite;
}

@keyframes scan {
  0%, 100% {
    top: 40rpx;
    opacity: 0;
  }
  50% {
    top: 50%;
    opacity: 1;
  }
}

.scan-title {
  color: #111827;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.scan-subtitle {
  color: #6B7280;
  font-size: 28rpx;
  margin-bottom: 48rpx;
  text-align: center;
}

.scan-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 480rpx;
  height: 96rpx;
  background-color: #B71C1C;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(183, 28, 28, 0.3);
  transition: all 0.3s ease;
}

.scan-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(183, 28, 28, 0.3);
}

.scan-button-icon {
  width: 48rpx;
  height: 48rpx;
}

.scan-button-text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
}

/* 识别历史 */
.history-section {
  padding: 0 32rpx;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.header-dot {
  width: 8rpx;
  height: 32rpx;
  border-radius: 999rpx;
  background-color: #B71C1C;
}

.header-title {
  color: #111827;
  font-size: 36rpx;
  font-weight: 600;
}

.header-action {
  color: #6B7280;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

/* 历史列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s ease;
}

.history-item:active {
  transform: scale(0.98);
}

.history-image-wrapper {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F3F4F6;
}

.history-image {
  width: 100%;
  height: 100%;
}

.history-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  gap: 16rpx;
}

.content-top {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-name {
  color: #111827;
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-name-en {
  color: #9CA3AF;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.history-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.location-text {
  color: #6B7280;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.time-today {
  background-color: #FEF2F2;
  color: #991B1B;
}

.time-yesterday {
  background-color: #FEF3C7;
  color: #92400E;
}

.time-older {
  background-color: #F3F4F6;
  color: #6B7280;
}

.history-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 32rpx;
}

.empty-text {
  color: #111827;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  color: #9CA3AF;
  font-size: 28rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}
