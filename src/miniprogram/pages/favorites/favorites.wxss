/* 收藏页样式 */
.page-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F7F7F7;
  box-sizing: border-box;
}

/* 红色顶部栏 */
.header {
  background-color: #B71C1C;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 30;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.back-button:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.header-title {
  color: #FFFFFF;
  font-size: 34rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.header-placeholder {
  width: 64rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F7F7F7;
  padding: 24rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 20;
}

.filter-left {
  display: flex;
  gap: 16rpx;
}

.filter-item {
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #6B7280;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #FFFFFF;
  color: #B71C1C;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #F3F4F6;
}

.manage-button {
  color: #6B7280;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  transition: color 0.3s ease;
}

.manage-button.editing {
  color: #B71C1C;
  font-weight: 600;
}

/* 主内容区 */
.main-content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 0 32rpx 32rpx;
}

.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 收藏卡片 */
.favorite-card {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
  transition: all 0.2s ease;
}

.favorite-card:active {
  transform: scale(0.99);
}

.favorite-card.edit-mode {
  padding-left: 16rpx;
}

/* 复选框 */
.checkbox-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  padding: 4rpx;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #D1D5DB;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background-color: #B71C1C;
  border-color: #B71C1C;
}

.check-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 图片 */
.card-image-wrapper {
  width: 176rpx;
  height: 176rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F3F4F6;
}

.card-image {
  width: 100%;
  height: 100%;
  transition: transform 0.7s ease;
}

.favorite-card:active .card-image {
  transform: scale(1.05);
}

/* 内容 */
.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  height: 176rpx;
  padding: 4rpx 64rpx 4rpx 0;
}

.favorite-card.edit-mode .card-content {
  padding-right: 0;
}

.content-top {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-name {
  color: #111827;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
}

.location-text {
  color: #6B7280;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-bottom {
  display: flex;
  align-items: center;
}

.time-tag {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background-color: #F9FAFB;
  color: #9CA3AF;
  font-size: 20rpx;
  font-weight: 500;
  border: 1rpx solid #F3F4F6;
}

/* 收藏按钮 */
.favorite-button {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.favorite-button:active {
  background-color: #FEF2F2;
}

.heart-icon {
  width: 44rpx;
  height: 44rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 32rpx;
}

.empty-icon {
  width: 192rpx;
  height: 192rpx;
  opacity: 0.2;
  margin-bottom: 32rpx;
}

.empty-title {
  color: #111827;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  color: #9CA3AF;
  font-size: 24rpx;
  margin-bottom: 48rpx;
  text-align: center;
}

.explore-button {
  width: 320rpx;
  height: 80rpx;
  background-color: #B71C1C;
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(183, 28, 28, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.explore-button:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 底部占位 */
.bottom-placeholder {
  height: 280rpx;
}

/* 编辑模式底部操作栏 */
.edit-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + 120rpx);
  background-color: #FFFFFF;
  border-top: 1rpx solid #F3F4F6;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 1001;
}

.toolbar-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 1rpx solid #E5E7EB;
  background-color: #F9FAFB;
  color: #6B7280;
}

.toolbar-button.active {
  background-color: #B71C1C;
  color: #FFFFFF;
  border-color: #B71C1C;
  box-shadow: 0 4rpx 12rpx rgba(183, 28, 28, 0.2);
}

.toolbar-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.toolbar-button.delete-button.disabled {
  background-color: #F3F4F6;
  color: #D1D5DB;
  border-color: #F3F4F6;
}