/* 知识图谱页样式 */
.graph-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #FEF2F2 0%, #F8F9FA 100%);
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 16rpx;
  z-index: 100;
  background: linear-gradient(to bottom, rgba(183, 28, 28, 0.9) 0%, rgba(183, 28, 28, 0.7) 100%);
  backdrop-filter: blur(20rpx);
}

.nav-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: none;
  padding: 0;
}

.nav-button-hover {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.nav-placeholder {
  width: 80rpx;
}

/* ========== 滚动内容区域 ========== */
.content-scroll {
  flex: 1;
  padding-top: 120rpx;
  padding-bottom: 48rpx;
}

/* ========== 中心建筑节点 ========== */
.center-node {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
  position: relative;
  z-index: 10;
}

.node-card {
  position: relative;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #D41111 0%, #B71C1C 100%);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(183, 28, 28, 0.3);
  min-width: 480rpx;
}

.node-icon {
  font-size: 64rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.node-info {
  flex: 1;
}

.node-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.node-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.node-badge {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  padding: 8rpx 20rpx;
  background-color: #FFFFFF;
  color: #D41111;
  font-size: 20rpx;
  font-weight: 700;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* ========== 关系网络图 (Obsidian风格) ========== */
.relation-graph {
  margin: 32rpx 40rpx 64rpx;
  padding: 32rpx;
  background: #1A1A1A;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  position: relative;
}

.graph-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.graph-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  display: block;
  margin-bottom: 8rpx;
}

.graph-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.4);
  display: block;
}

.graph-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* Canvas 画布容器 */
.canvas-container {
  width: 100%;
  height: 1000rpx;
  background: #0D0D0D;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}

/* Canvas 画布 */
.graph-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 图例 */
.graph-legend {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid #FFFFFF;
}

.legend-center {
  background-color: #D41111;
}

.legend-people {
  background-color: #3B82F6;
}

.legend-event {
  background-color: #10B981;
}

.legend-building {
  background-color: #F59E0B;
}

.legend-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* ========== 通用区块样式 ========== */
.section {
  margin: 32rpx 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  flex: 1;
}

.section-count {
  padding: 4rpx 16rpx;
  background-color: #FEF2F2;
  color: #D41111;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* ========== 人物卡片 ========== */
.person-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.person-card {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.person-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FEF2F2 0%, #FEE2E2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  flex-shrink: 0;
}

.person-info {
  flex: 1;
  min-width: 0;
}

.person-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 8rpx;
}

.person-role {
  font-size: 24rpx;
  color: #D41111;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.person-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 40rpx;
}

/* ========== 事件卡片 ========== */
.event-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.event-card {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.event-date {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #D41111 0%, #B71C1C 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 16rpx;
  height: fit-content;
  white-space: nowrap;
  flex-shrink: 0;
}

.event-content {
  flex: 1;
  min-width: 0;
}

.event-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 12rpx;
}

.event-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 40rpx;
}

/* ========== 关联建筑卡片 ========== */
.building-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.building-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  align-items: center;
  transition: all 0.2s ease;
}

.building-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.building-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background-color: #F3F4F6;
  flex-shrink: 0;
}

.building-info {
  flex: 1;
  min-width: 0;
}

.building-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F1F1F;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.building-relation {
  font-size: 24rpx;
  color: #9CA3AF;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

/* ========== 时间线 ========== */
.timeline {
  position: relative;
  padding-left: 80rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 48rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -80rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background-color: #D41111;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 0 0 4rpx #FEF2F2;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: -68rpx;
  top: 32rpx;
  width: 2rpx;
  height: calc(100% + 16rpx);
  background-color: #FCA5A5;
  z-index: 1;
}

.timeline-content {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.timeline-year {
  font-size: 28rpx;
  font-weight: 600;
  color: #D41111;
  margin-bottom: 8rpx;
}

.timeline-event {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 40rpx;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 48rpx;
}
